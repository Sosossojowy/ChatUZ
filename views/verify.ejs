<body id="inne-tlo">
  <div id="loader">
    <div class="spinner"></div>
    <div class="text">
      <p>Wysyłam kod weryfikacyjny...</p> 
    </div>
  </div>
  <div class="verify-main">
    <img src="./images/logo UZ pion - CMYK.jpg">
    <div class="header">
      <h1></h1>
    </div>
    
      <% if (step === 'email') { %>
    <div class="input-mail">
      <form action="/verify" id="assignForm" method="POST" class="form-vertical">
        <input type="email" name="email" placeholder="Adres e-mail" required>
    </div>
    <div class="error">
      <% if (error) { %>
        <p style="color: red;"><%= error %></p>
      <% } %>
    </div>
        <button  type="submit">Wyślij kod</button>
      </form>
      <% } else if (step === 'code') { %>
    <div class="input-mail">
      <form action="/verify" method="POST" class="form-vertical">
        <input hidden="true"  name="email" value="<%= email %>">
        <input type="text" name="code" placeholder="Wpisz kod z e-maila" required>
    </div>
    <div class="error">
      <% if (error) { %>
        <p style="color: red;"><%= error %></p>
      <% } %>
    </div>
        <button type="submit">Potwierdź</button>
        </form>
      <% } %>
  </div>

  <% if (step === 'email') { %>
    <script>
    document.getElementById("assignForm").addEventListener("submit", function () {
      document.getElementById("loader").style.display = "flex";
    });
    </script>
  <% } %>


  
</body>

